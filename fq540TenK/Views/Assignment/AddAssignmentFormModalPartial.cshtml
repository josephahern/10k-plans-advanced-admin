@using System.Linq
@model List<fq540TenK.Models.AddAssignmentForm>
<!-- Batch Add Modal -->
@using (Html.BeginForm("Add", "Assignment", FormMethod.Post))
{
<div class="modal fade" id="batch-add-modal" tabindex="-1" role="dialog" aria-labelledby="batch-add-modal-label">
    <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="batch-add-modal-label">Batch Add Resources to Project/Phase</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h5>Resources To Be Assigned to @ViewBag.assignableId</h5>
                            <input type="hidden" name="project_id" value="@ViewBag.projectId"/>
                            <input type="hidden" name="phase_id" value="@ViewBag.phaseId" />
                            <ul class="add-assignment-modal-list"></ul>
                            <input type="hidden" name="users" value="none" />
                            <hr />
                            <h5><b>Allocation Type & Amount:</b></h5>
                        </div>
                        <div id="allocationModeSelect">
                            <div class="col-md-4">
                                <label>
                                    <input type="radio" name="add-allocation-mode" value="percent" id="add-percent" required />
                                    Percent
                                </label>
                                <input type="text" name="add-amount-percent" id="add-amount-percent" size="2" disabled> %
                            </div>
                            <div class="col-md-4">
                                <label>
                                    <input type="radio" name="add-allocation-mode" value="hours-per-day" id="add-hours-per-day" required />
                                    Daily
                                </label>
                                <input type="text" name="add-amount-hours-per-day" id="add-amount-hours-per-day" size="2" disabled> hrs
                            </div>
                            <div class="col-md-4">
                                <label>
                                    <input type="radio" name="add-allocation-mode" value="fixed" id="add-fixed" required />
                                    Total
                                </label>
                                <input type="text" name="add-amount-fixed" id="add-amount-fixed" size="2" disabled> hrs
                            </div>
                            <input type="hidden" name="allocation_mode" value="none" />
                            <input type="hidden" name="allocation_amount" value="none" />
                        </div>
                        <div class="col-md-6" style="margin-top:15px;">
                            <label for="start_time">Start Time</label>
                            <div class="input-group date">
                                <input type="text" class="form-control add-start-time" name="start_time">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top:15px;">
                            <label for="end_time">End Time</label>
                            <div class="input-group date">
                                <input type="text" class="form-control add-end-time" name="end_time">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" id="add-commit-submit" class="btn btn-primary">Commit Changes</button>
                </div>
            </div>
    </div>
</div>
}