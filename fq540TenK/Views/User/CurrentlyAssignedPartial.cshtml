@using System.Linq
@model List<fq540TenK.Models.ProjectAssignee>
<hr />
@if (!Model.Any())
{
    <div class="row">
        <div class="col-md-12">
            <h4>There are no resources currently assigned to this project/phase.</h4>
            <p>Consider using the "Batch Add Resources" tool below to add one or many resources (users) to this project/phase.</p>
        </div>
    </div>
}
else {
            <div class="row">
                <div class="col-md-12">
                    <h4>Currently Assigned:</h4>
                    <span>Batch Edit: <button class="btn btn-disabled batchEditButton" data-toggle="modal" data-target="#batch-edit-modal" disabled>None Selected</button> | <a href="#" class="selectAllAssigned">Select All</a> / <a href="#" class="selectNoneAssigned">Select None</a></span>
                    @foreach (var assignee in Model)
                    {
                        <h5><b>@assignee.display_name</b> | 
                        @if (assignee.discipline != null) {@assignee.discipline} 
                        @if (assignee.role != null) {@assignee.role} 
                        User ID: @assignee.id</h5>

                        if (!assignee.assignments.empty)
                        {
                            <table class="table table-bordered table-condensed">
                                <tr>
                                    <td rowspan="1"></td>
                                    <th>Assignment ID</th>
                                    <th>Allocation Type</th>
                                    <th>Allocation Amount</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <td rowspan="1"></td>
                                </tr>
                                @foreach (var assignment in assignee.assignments.data)
                        {
                            if (assignment.assignable_id == ViewBag.parentID)
                            {
                                        <tr>
                                            <th scope="row" style="text-align: center;">
                                                <input type="checkbox"
                                                       class="currentlyAssigned"
                                                       data-name="@assignee.display_name"
                                                       data-id="@assignment.id"
                                                       data-allocation-mode="@assignment.allocation_mode"
                                                       data-hours-per-day="@assignment.hours_per_day"
                                                       data-user-id="@assignment.user_id"
                                                       data-assignable-id="@assignment.assignable_id"
                                                       data-ends-at="@assignment.ends_at"
                                                       data-start-at="@assignment.starts_at"
                                                       data-bill-rate="@assignment.bill_rate"
                                                       data-bill-rate-id="@assignment.bill_rate_id"
                                                       data-repetition-id="@assignment.repetition_id"
                                                       data-created-at="@assignment.created_at"
                                                       data-updated-at="@assignment.updated_at"
                                                       data-all-day-assignment="@assignment.all_day_assignment"
                                                       data-fixed-hours="@assignment.fixed_hours"
                                                       data-percent="@assignment.percent" />
                                            </th>
                                            <td>@assignment.id</td>
                                            <td>@assignment.allocation_mode</td>
                                            @if (assignment.allocation_mode == "fixed")
                                            {
                                                <td>@assignment.fixed_hours</td>
                                            }
                                            else if (assignment.allocation_mode == "percent")
                                            {
                                                <td>@assignment.percent</td>
                                            }
                                            else
                                            {
                                                <td>@assignment.hours_per_day</td>
                                            }
                                            <td>@assignment.starts_at.Date.ToString("MMMM dd, yyyy")</td>
                                            <td>@assignment.ends_at.Date.ToString("MMMM dd, yyyy")</td>
                                            <td style="text-align: center;"><span class="glyphicon glyphicon-remove remove-assignment" data-assignment-id="@assignment.id"></span></td>
                                        </tr>
                                    }
                                }
                            </table>

                        }

                    }
                    <span>Batch Edit: <button class="btn btn-disabled batchEditButton" data-toggle="modal" data-target="#batch-edit-modal" disabled>None Selected</button> | <a href="#" class="selectAllAssigned">Select All</a> / <a href="#" class="selectNoneAssigned">Select None</a></span>
                </div>
            </div>
            <!-- Batch Edit Modal -->
            <div class="modal fade" id="batch-edit-modal" tabindex="-1" role="dialog" aria-labelledby="batch-edit-modal-label">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="batch-edit-modal-label">Batch Edit Project/Phase Resources</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <h5>Resources To Be Edited: </h5>
                                    <ul class="assigned-modal-list"></ul>
                                    <hr />
                                    <h5><b>Allocation Type & Amount:</b></h5>
                                </div>
                                <div id="allocationModeSelect">
                                    <div class="col-md-4">
                                        <input type="radio" name="allocationMode" value="percent" checked="checked"> Percentage <input type="text" name="percent" size="2"> %<br>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="radio" name="allocationMode" value="hours_per_day"> Daily <input type="text" name="hours_per_day" size="2" disabled> hrs<br>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="radio" name="allocationMode" value="fixed"> Total <input type="text" name="fixed" size="2" disabled> hrs<br>
                                    </div>
                                </div>
                                <div class="col-md-6" style="margin-top:15px;">
                                    <label for="edit-start-time">Start Time</label>
                                        <div class="input-group date">
                                            <input type="text" class="form-control edit-start-time" name="edit-start-time">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                                        </div>
                                </div>
                                <div class="col-md-6" style="margin-top:15px;">
                                    <label for="edit-end-time">End Time</label>
                                        <div class="input-group date">
                                            <input type="text" class="form-control edit-end-time" name="edit-end-time">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                                        </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" id="edit-commit-submit" class="btn btn-primary">Commit Changes</button>
                        </div>
                    </div>
                </div>
            </div>
            }
