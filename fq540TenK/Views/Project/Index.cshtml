@{
    ViewBag.Title = "Project Index";
}
@model List<fq540TenK.Models.Project>
<h4>Project List:</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover tablesorter" id="project-list">
            <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Client Name</th>
                    <th># of Phases</th>
                    <th>Last Updated</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr id="@project.id">
                        <td>@project.name</td>
                        <td>
                            @if (project.client != null){
                                @project.client
                            }
                            else {
                                @:(No Client Specified)
                            }
                        </td>
                        <td>@project.phase_count</td>
                        <td>@project.updated_at.Date.ToString("MMMM dd, yyyy")</td>
                    </tr>
                }
            </tbody>    
        </table>
    </div>
</div>

